<h1 class="text-center"><%= @message %></h1>

<div class="text-center mt-4">
  <%= link_to @button_text, @button_path, class: "btn btn-primary" %>
</div>

<h2 class="text-center">Inventory</h2>

<div class="container mt-4">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <% if item.image.attached? %>
            <%= image_tag item.image, class: "card-img-top", alt: item.title %>
          <% else %>
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="No Image Available">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text"><strong>Price:</strong> $<%= item.price %></p>
            <% if current_admin %>
              <%= link_to "Edit", edit_item_path(item), class: "btn btn-warning btn-sm" %>
              <%= link_to "Delete", item_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_admin %>
    <%= link_to "Add New Item", new_item_path, class: "btn btn-primary mt-4" %>
  <% end %>
</div>
