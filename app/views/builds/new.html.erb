<h1>Create a New Build</h1>

<%= form_with model: @build, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_modified %>
    <%= form.datetime_select :last_modified, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", builds_path, class: "btn btn-secondary" %>
<% end %>