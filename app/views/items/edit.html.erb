<h1 class="text-center">Edit Item</h1>

<div class="container mt-4">
  <%= form_with model: @item, local: true, class: "row g-3", multipart: true do |f| %>
    <div class="col-md-6">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :price, class: "form-label" %>
      <%= f.number_field :price, class: "form-control", step: 0.01 %>
    </div>
    <div class="col-12">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
    </div>
    <div class="col-12">
      <% if @item.image.attached? %>
        <p>Current Image:</p>
        <%= image_tag @item.image, class: "img-fluid mb-3" %>
      <% end %>
      <%= f.label :image, "Upload New Image", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="col-12">
      <%= f.submit "Update Item", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

